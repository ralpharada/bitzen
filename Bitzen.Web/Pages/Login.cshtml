@page
@model LoginModel
@{
    ViewData["Title"] = "Home page";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
    <title>Login</title>
    <style type="text/css">
    .login{width:400px}    
    </style>
</head>
<body class="flex items-center justify-center h-screen bg-gray-200">


    <div class="bg-white p-8 rounded shadow-md login">
        <div class="flex justify-center pb-5"><img src="/images/logo.png" class="h-8 me-3" alt="FlowBite Logo" /></div>

        <form action="#" method="POST">
            <div class="mb-4">
                <label for="email" class="block text-gray-700 text-sm font-bold mb-2">E-mail</label>
                <input type="text" id="email" name="email" class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:border-blue-500">
            </div>

            <div class="mb-4">
                <label for="senha" class="block text-gray-700 text-sm font-bold mb-2">Senha</label>
                <input type="password" id="senha" name="senha" class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:border-blue-500">
            </div>
            <div>
                <div id="error" class="bg-red-100 border border-red-400 text-red-700 px-4 py-1 mb-3 rounded relative hidden">
                    <span class="block sm:inline"></span>
                </div>
                <div id="success" class="bg-green-100 border border-green-400 text-green-700 px-4 py-1 rounded relative hidden">
                    <span class="block sm:inline"></span>
                </div>
            </div>
            <button type="button" id="btnLogin" onclick="fazerLogin()" class="w-full bg-blue-500 text-white p-2 rounded">Login</button>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/services/login.js"></script>
    <script>
        const fazerLogin = async () => {
            $('#btnLogin').html('Aguarde...');
            $('#btnLogin').attr('disabled', true);
            const email = $('#email').val();
            const password = $('#senha').val();
            const resposta = await Login.fazerLogin(email, password);
            if (resposta) {
                $('#error').show();
                $('#error span').html(resposta);
                setTimeout(() => { $('#error').hide() }, 5000);
            }
            $('#btnLogin').html('Login');
            $('#btnLogin').attr('disabled', false);
        }
    </script>
</body>
</html>
